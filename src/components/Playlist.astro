---
interface Props {
	/** The playlist name */
	title: string
	/** Spotify embed url for the playlist: https://developer.spotify.com/documentation/widgets/generate/play-button */
	url: string
	/** description - Text about the playlist */
	description: string
	/** featuring - No more than 3 artists who are in the playlist */
	featuring: string
}
---

<div class="playlist">
	<iframe
		allow='encrypted-media'
		allowtransparency='true'
		height='80'
		src={ Astro.props.url }
		width='300'
	/>

	<div class="text">
		<div class="header">{ Astro.props.title }</div>
		<div class="description">{ Astro.props.description }</div>
		<div class="featuring">{ Astro.props.featuring }</div>
	</div>
</div>

<style>
	.playlist {
		margin-bottom: 25px;
	}

	@media (min-width: 700px) {
		.playlist {
			display: flex;
		}
	}

	.playlist:first-of-type {
		margin-top: 40px;
	}

	.playlist iframe {
		background-color: #f5f5f5;
		margin-right: 25px;
	}

	.header {
		display: none;
		font-size: 18px;
		font-weight: bold;
		margin-bottom: 5px;
	}

	@media (min-width: 700px) {
		.header {
			display: block;
		}
	}

	.description {
		margin: 5px 0;
	}

	.featuring {
		color: #777;
		font-style: italic;
	}
</style>
